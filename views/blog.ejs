<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("./partials/head.ejs") %>
  <title>View Blog</title>
</head>

<body>
  <%- include("./partials/nav.ejs") %>
  <div class="container mt-4">
    <h1><%= blog.title %></h1>
    <img src="<%= blog.coverImageURL %>" alt="<% blog.title %>" width="300px" height="300px" />
    <pre class="mt-3"><%= blog.body %></pre>
  </div>
  <div class="container">
    <div>
      <img src="<%= blog.createdBy.profileImageURL %>" width="50px" height="50px" />
      <h3><%= blog.createdBy.fullName %></h3>
    </div>
  </div>
  <div class="container mt-3">
    <h1>Comments (<%= comments.length %>)</h1>
    <% if (locals.user) { %>
    <form action="/blog/comment/<%= blog._id %>" method="post">
      <div class="mb-3">
        <input type="text" class="form-control" placeholder="Enter your comment" id="content" aria-describedby="content" name="content">
      </div>
      <button type="submit" class="btn btn-sm btn-secondary">Comment</button>
    </form>
    <% } %>
    <div class="container mt-3">
      <% comments.forEach(comment => { %>
      <div>
        <img src="<%= blog.createdBy.profileImageURL %>" width="50px" height="50px" />
        <h3><%= blog.createdBy.fullName %></h3>
        <pre><%= comment.content %></pre>
      </div>
      <% }) %>
    </div>
  </div>
  <%- include("./partials/scripts.ejs") %>
</body>

</html>